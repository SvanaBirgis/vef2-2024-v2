<%- include('header') -%>

<h1><%= locals.title %></h1>

<div class="standings">
    <table>
        <thead>
            <tr>
                <th>Lið</th>
                <th>Sigrar</th>
                <th>Jafntefli</th>
                <th>Töp</th>
                <th>Stig</th>
            </tr>
        </thead>
        <tbody> 
            <% locals.standings.forEach(standing => { %>
                <tr>
                    <td><%= standing.name %></td>
                    <td><%= standing.wins %></td>
                    <td><%= standing.draws %></td>
                    <td><%= standing.losses %></td>
                    <td><%= standing.points %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('footer') -%>
